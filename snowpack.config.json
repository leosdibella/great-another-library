{
  "scripts": {
    "run:tsc": "tsc --noEmit",
    "run:tsc::watch": "$1 --watch",
    "mount:public": "mount public --to /",
    "mount:src": "mount src --to /_dist_",
    "run:sass": "sass src:public --no-source-map",
    "run:sass::watch": "$1 --watch"
  },
  "plugins": [
    "@snowpack/plugin-babel"
  ]
}
